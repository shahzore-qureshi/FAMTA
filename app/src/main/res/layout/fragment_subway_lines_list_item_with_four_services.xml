<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_horizontal_padding"
    android:paddingBottom="@dimen/activity_horizontal_padding"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/subway_line_four_services_image_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subway_service_1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <ImageView
        android:id="@+id/subway_line_four_services_image_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subway_service_2"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/subway_line_four_services_image_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subway_service_3"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/subway_line_four_services_image_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subway_service_4"
        android:layout_gravity="center_vertical" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/subway_line_four_services_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/placeholder_status"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="@dimen/text_size_extra_small"
        app:autoSizeMaxTextSize="@dimen/text_size_normal"
        app:autoSizeStepGranularity="@dimen/text_size_auto_granularity"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:textStyle="bold"/>

</LinearLayout>