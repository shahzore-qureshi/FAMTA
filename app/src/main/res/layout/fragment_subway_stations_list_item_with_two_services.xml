<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/activity_horizontal_padding"
    android:paddingBottom="@dimen/activity_horizontal_padding"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/subway_station_two_services_text"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="@string/long_placeholder"
        android:textSize="@dimen/text_size_normal"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:id="@+id/subway_station_two_services_image_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subway_service_1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

    <ImageView
        android:id="@+id/subway_station_two_services_image_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_subway_service_2"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin" />

</LinearLayout>